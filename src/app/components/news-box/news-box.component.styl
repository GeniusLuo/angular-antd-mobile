.news-item
  border-bottom 1px solid #eee
  padding 0 1.5rem


.title
  font-size 1.5rem
  text-align center
  height 4rem
  line-height 4rem
  overflow hidden
  text-overflow ellipsis
  white-space nowrap


.img-box
  height 16rem
  width 100%


.img-box img
  width 100%
  height 100%


.text-info
  padding 1rem 0
  color #333
  display flex
  justify-content space-between
  font-size 1.2rem

